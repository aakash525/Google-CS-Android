<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="adc.calculator.Calc">

    <Button
        android:text="Clear"
        android:layout_width="500px"
        android:layout_height="100px"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/clear"
        android:elevation="5dp" />

    <Button
        android:text="2"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_alignBaseline="@+id/b1"
        android:layout_alignBottom="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:elevation="5dp" />

    <Button
        android:text="1"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/clear"
        android:layout_alignStart="@+id/clear"
        android:elevation="5dp" />

    <Button
        android:text="+"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:layout_alignBaseline="@+id/b3"
        android:layout_alignBottom="@+id/b3"
        android:layout_alignRight="@+id/clear"
        android:layout_alignEnd="@+id/clear"
        android:elevation="5dp" />

    <Button
        android:text="3"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/b2"
        android:layout_alignBottom="@+id/b2"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:elevation="5dp" />

    <Button
        android:text="5"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:layout_alignBaseline="@+id/b4"
        android:layout_alignBottom="@+id/b4"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:elevation="5dp" />

    <Button
        android:text="6"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b6"
        android:layout_alignBaseline="@+id/b5"
        android:layout_alignBottom="@+id/b5"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:elevation="5dp" />

    <Button
        android:text="-"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/sub"
        android:layout_alignBaseline="@+id/b6"
        android:layout_alignBottom="@+id/b6"
        android:layout_alignLeft="@+id/add"
        android:layout_alignStart="@+id/add"
        android:elevation="5dp" />

    <Button
        android:text="4"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/b4"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1"
        android:elevation="5dp" />

    <Button
        android:text="7"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b7"
        android:layout_below="@+id/b5"
        android:layout_alignLeft="@+id/b4"
        android:layout_alignStart="@+id/b4"
        android:layout_marginTop="13dp"
        android:elevation="5dp" />

    <Button
        android:text="8"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b8"
        android:layout_alignBaseline="@+id/b7"
        android:layout_alignBottom="@+id/b7"
        android:layout_alignLeft="@+id/b5"
        android:layout_alignStart="@+id/b5"
        android:elevation="5dp" />

    <Button
        android:text="9"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b9"
        android:layout_alignTop="@+id/b8"
        android:layout_alignLeft="@+id/b6"
        android:layout_alignStart="@+id/b6"
        android:elevation="5dp" />

    <Button
        android:text="/"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/div"
        android:layout_alignBaseline="@+id/b9"
        android:layout_alignBottom="@+id/b9"
        android:layout_alignLeft="@+id/sub"
        android:layout_alignStart="@+id/sub"
        android:elevation="5dp" />

    <Button
        android:text="0"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/b0"
        android:layout_alignBaseline="@+id/ce"
        android:layout_alignBottom="@+id/ce"
        android:layout_alignLeft="@+id/b8"
        android:layout_alignStart="@+id/b8"
        android:elevation="5dp" />

    <Button
        android:text="="
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/eq"
        android:layout_alignBaseline="@+id/b0"
        android:layout_alignBottom="@+id/b0"
        android:layout_alignLeft="@+id/b9"
        android:layout_alignStart="@+id/b9"
        android:elevation="5dp" />

    <Button
        android:text="CE"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/ce"
        android:layout_below="@+id/b7"
        android:layout_alignLeft="@+id/b7"
        android:layout_alignStart="@+id/b7"
        android:layout_marginTop="12dp"
        android:elevation="5dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:layout_marginTop="20dp"
        android:id="@+id/text2"
        android:textSize="5mm"
        android:textStyle="bold"
        android:layout_below="@+id/text1"
        android:layout_alignRight="@+id/clear"
        android:layout_alignEnd="@+id/clear"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:id="@+id/text1"
        android:textSize="3mm"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/text2"
        android:layout_alignStart="@+id/text2"
        android:layout_alignRight="@+id/text2"
        android:layout_alignEnd="@+id/text2" />

    <Button
        android:text="*"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/mul"
        android:elevation="5dp"
        android:layout_alignBaseline="@+id/eq"
        android:layout_alignBottom="@+id/eq"
        android:layout_alignLeft="@+id/div"
        android:layout_alignStart="@+id/div" />

</RelativeLayout>
